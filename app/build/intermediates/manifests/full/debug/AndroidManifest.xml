<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.perfecto.tipcalculator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.perfecto.tipcalculator.CalcTipActivity"
            android:parentActivityName="com.example.perfecto.tipcalculator.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.perfecto.tipcalculator.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.perfecto.tipcalculator.BigListActivity"
            android:parentActivityName="com.example.perfecto.tipcalculator.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.perfecto.tipcalculator.HomeActivity" />
        </activity>
        <activity
            android:name="com.example.perfecto.tipcalculator.NavDrawerActivity"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.perfecto.tipcalculator.HomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.perfecto.tipcalculator.PhotoActivity" />
    </application>

</manifest>